    <Genome xmlns:py="http://genshi.edgewall.org/">
        <Description>
            <GenomeAssemblyMetadataChoice>
                <GenomeAssemblyMetadata>
                    <SequencingTechnologies coverage="${genome.genome_coverage}">
                        <Technology>${genome.sequencing_technology}</Technology>
                    </SequencingTechnologies>
                    <py:choose test="genome.assembly_reference if 'assembly_reference' in genome else ''">
                    <Assembly py:when="''">
                        <Method version="${genome['assembly_version/assembly_date']">${genome.assembly_method}</Method>
                    </Assembly>
                    <Assembly py:otherwise="" reference_assembly="${genome.assembly_reference}">
                        <Method version="${genome['assembly_version/assembly_date']">${genome.assembly_method}</Method>
                    </Assembly>
                    </py:choose>
                    <AssemblyName py:if="'assembly_name' in genome and genome.assembly_name != ''">
                        ${genome.assembly_name}
                    </AssemblyName>
                </GenomeAssemblyMetadata>
            </GenomeAssemblyMetadataChoice>
            <GapInfo>

            </GapInfo>
        </Description>
    </Genome>
